"1.0b6 (created: 2011/03/09 09:25:18)

loadplugins '\.(js|penta)$'
group user

"source /home/sanford/.pentadactyl/colors/neverland

map J gT
map K gt

map < :tabmove -1<CR>
map > :tabmove +1<CR>

map , <leader>

" view native size of image without clicking it
nmap <leader>z :js window.content.document.toggleImageSize();<CR>

"set showmode
set titlestring=Fx

set showtabline=multitab
set guioptions=Cs

set autocomplete=.*
set complete=location,file

set sanitizeshutdown=commandline,formdata,history,passwords

" toggle styles """""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
map -builtin <F3> :styletoggle<Space>-name<Space>jellybeans<CR>
map -builtin <leader>t :styletoggle<Space>-name<Space>minitabs<CR>

" dark colorscheme """"""""""""""""""""""""""""""""""""""""""""""""""""""""""""
style -name jellybeans http://*,https://*,file://*,about:blank <<EOM
* {
  color: #888888 !important;
  background: #151515 !important;
  border-color: #292929 !important;
}

a, a * {
  color: #8197bf !important;
  text-decoration: none !important;
}

a:hover, a:hover * {
  color: #fad07a !important;
}

a:visited, a:visited * {
  color: #b47699 !important;
}

a:visited:hover, a:visited:hover * {
  color: #fad07a !important;
}
EOM
styledisable -name=jellybeans

" minimalistic tabs """""""""""""""""""""""""""""""""""""""""""""""""""""""""""
style -name minitabs chrome://* <<EOM
#TabsToolbar toolbarbutton {
  display: none !important;
}
 
.tabbrowser-tabs {
  background: #292929 !important;
}
 
.tabbrowser-tab {
  -moz-appearance: none !important;
  -moz-border-radius: 0 !important;
  background: #292929 !important;
  border: none !important;
  color: #888888 !important;
  font-family: Terminus;
  font-size: 9pt !important;
  height: 18px !important;
  margin: 0 !important;
  min-height: 0 !important;
  padding: 0 0.5ex !important;
}
 
.tabbrowser-tab:not([pinned]) {
  max-width: 250px !important;
  min-width: 250px !important;
}

.tabbrowser-tab:not([fadein]) {
  max-width: 1px !important;
  min-width: 1px !important;
}

.tabbrowser-tab:hover {
  background: #fad07a !important;
  color: #292929 !important;
}
 
.tabbrowser-tab[selected] {
  background: #292929 !important;
  color: #fad07a !important;
}
EOM

